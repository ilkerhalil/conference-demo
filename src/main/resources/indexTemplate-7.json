{
    "index_patterns": [
      "log4j2*"
    ],
    "settings": {
      "index": {
        "refresh_interval": "5s"
      }
    },
    "mappings": {
      "properties": {
        "loggerName": {
          "type": "keyword",
          "index": true
        },
        "path": {
          "type": "keyword",
          "index": true
        },
        "message": {
          "type": "keyword",
          "index": false
        },
        "request": {
          "type": "keyword",
          "index": false
        },
        "timeMillis": {
          "type": "date",
          "format": "epoch_millis"
        },
        "thread": {
          "type": "keyword",
          "index": false
        },
        "level": {
          "type": "keyword",
          "index": true
        }
      }
    }
  }